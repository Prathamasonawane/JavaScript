//Change the bgColor when click on color Button

<html>
<body>
<form>
<input type="button" value="PINK" onclick="show1()">
<input type="button" value="YELLOW" onclick="show2()">
<input type="button" value="RED" onclick="show3()">
</form>
</body>
</html>

<script language="javascript">
     function show1()
	{
	    document.bgColor="pink";
	}
     function show2()
	{
	    document.bgColor="yellow";
	}
     function show3()
	{
	    document.bgColor="red";
	}
</script>


